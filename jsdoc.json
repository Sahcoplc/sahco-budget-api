{
    "tags": {
        "allowUnknownTags": true
    },
    "plugins": ["plugins/markdown", "plugins/summarize"],
    "recurseDepth": 10,
    "source": {
        "include": ["."],
        "includePattern": ".(jsx|js|ts|tsx)$",
        "excludePattern": "(node_modules|docs)"
    },
    "sourceType": "module",
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        }
    },
    "opts": {
        "encoding": "utf8",
        "readme": "./README.md",
        "destination": "docs/",
        "recurse": true,
        "verbose": true
    }
}
